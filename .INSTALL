#!/bin/sh

pre_install() {
    useradd -m -G wheel zhullyb
    pacman -S xorg sddm plasma --noconfirm
}

post_install() {
    local-gen
    systemctl enable NetworkManager
    systemctl enable sddm
    $ECHO "\033[36m******************************\033[0m"
    $ECHO "\033[36m*   Remember to run Passwd   *\033[0m"
    $ECHO "\033[36m******************************\033[0m"
}
